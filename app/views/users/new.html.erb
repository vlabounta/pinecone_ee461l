<% provide(:title, 'Sign up') %>


<div class="single-widget-container">
    <section class="widget login-widget">
        <header class="text-align-center">
            <h4>Signup for an account</h4>
        </header>
        <div class="body">
         <%= twitter_bootstrap_form_for @user, :class => 'no-margin', role: 'form' do |f| %>

              <%= f.inputs do %>

                <%= f.text_field :name, :placeholder => 'Your Name'%>
                <%= f.email_field :email, :placeholder => 'Your Email' %>
                <%= f.password_field :password, :placeholder => 'Password' %>
                <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %>
                
              <% end %>
              <%= f.actions do %>
                <%= f.submit "Create account", :class => 'btn btn-block btn-lg btn-danger' %>
              <% end %>
            <% end %>

        </div>

