<% provide(:title, "Sign In") %>


<div class="single-widget-container">
    <section class="widget login-widget">
        <header class="text-align-center">
            <h4>Sign in</h4>
        </header>
        <div class="body">
         <%= twitter_bootstrap_form_for :session, url: sessions_path, :class => 'no-margin', role: 'form' do |f| %>

              <%= f.inputs do %>

                <%= f.email_field :email, :placeholder => 'Your Email' %>
                <%= f.password_field :password, :placeholder => 'Password' %>
                
              <% end %>
              <%= f.actions do %>
                <%= f.submit "Sign in", :class => 'btn btn-block btn-lg btn-danger' %>
              <% end %>
            <% end %>

        </div>

    </section>
</div>
